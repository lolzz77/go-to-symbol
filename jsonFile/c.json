{
    "function" : {
        "whole" : ["\\b(?:void|int|char|float|double|long|short)\\s+([a-zA-Z_][a-zA-Z_0-9]*)\\s*\\([^)]*\\)\\s*\\{", "g"],
        "opening" : ["{", "}"],
        "before" : "("
    },
    "struct" : {
        "whole" : ["struct\\s+[^{}]*\\{", "g"],
        "opening" : ["{", "}"],
        "before" : "{"
    },
    "enum" : {
        "whole" : ["enum\\s+[^{}]*\\{", "g"],
        "opening" : ["{", "}"],
        "before" : "{"
    },
    "comment" : {
        "whole" : ["\\/\\/.*|\\/\\*[^*]*\\*+(?:[^\\/*][^*]*\\*+)*\\/", "g"]
    },
    "macro" : {
        "whole" : ["#define\\s+([^\\n]+)\\n", "g"],
        "after" : "define"
    },
    "global" : {
        "whole" : ["\\b(?:void|int|char|float|double|long|short)\\s+[a-zA-Z_][a-zA-Z_0-9]*\\s*[^;]*;", "g"],
        "before" : "="
    }
}