{
    "function" : {
        "whole" : ["\\b(?:void|int|char|float|double|long|short)\\s+([a-zA-Z_][a-zA-Z_0-9]*)\\s*\\([^)]*\\)\\s*\\{", "g"],
        "opening" : ["{", "}"],
        "before" : "("
    },
    "class" : {
        "whole" : ["^\\s*class\\s+\\w+\\s*\\{", "gm"],
        "opening" : ["{", "}"],
        "before" : "("
    },
    "struct" : {
        "whole" : ["struct\\s+[^{}]*\\{", "g"],
        "opening" : ["{", "}"],
        "before" : "{"
    },
    "enum" : {
        "whole" : ["enum\\s+[^{}]*\\{", "g"],
        "opening" : ["{", "}"],
        "before" : "{"
    },
    "macro" : {
        "whole" : ["^\\s*#define\\s+([^\\n]+)\\n", "gm"],
        "after" : "define"
    },
    "global" : {
        "whole" : ["^\\s*(?!static)\\w+\\s+\\w+\\s*;", "gm"],
        "before" : "="
    }
}